<div style=" margin-top: 1%;margin-bottom: 1%;margin-left: 1%;margin-right: 1%;">

    <h1 class="text-center">Change Password</h1>
    <%= form_with model: @user, url: user_update_password_path(@user.id), local: true do |f| %>
        <% if @user.errors.any? %>
            <p><%= @user.errors.full_messages.join(', ') %> </p>
        <% end %>
        <div>
            <div>
                <%= f.label :current_password, "Current Password" %>
                <%= f.password_field :current_password, placeholder: "Old password" ,class:"form-control" %>



            </div>
            <div>
                <%= f.label :new_password, "New Password" %>
                <%= f.password_field :new_password, placeholder: "New password",class:"form-control" %>        
            </div>
            <div>
                <%= f.label :new_password, "New Password" %>
                <%= f.password_field :new_password_confirmation, placeholder: "Confirm New password",class:"form-control" %>        
            </div>
        </div>
        <br>
        <%= f.submit "Update Password" , class:"btn btn-primary"%>
    <% end %>

</div>

