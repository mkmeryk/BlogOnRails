<h1>Edit Your post</h1>
<% if @post.errors.any? %>
    <ul>
        <% @post.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
        <% end %>
    </ul>
<% end %>
<%= form_with(model: @post, url: posts_path, method: :patch ) do |form| %>
    <div>
        <%= form.label :title %>
        <br>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :body %>
        <br>
        <%= form.text_area :body, cols: 50, rows: 5 %>
    </div>
    <%= form.submit %>
<% end %>