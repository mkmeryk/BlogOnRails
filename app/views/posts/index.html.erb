<div class="d-flex flex-column">

    <% @posts.each do |post| %>
        
        <div style=" margin-top: 1%;margin-bottom: 1%;margin-left: 1%;margin-right: 1%;" >
            <div class="card" >
                <h4 style=" margin-top: 1%;margin-bottom: 1%;margin-left: 1%;margin-right: 1%;"> <%= link_to post.title, post_path(post), class:"link"%> </h4>
                <p style=" margin-top: 1%;margin-bottom: 1%;margin-left: 1%;margin-right: 1%;"><%= post.body %> </p>
            </div>
            
        </div>

    <% end %>

</div>
