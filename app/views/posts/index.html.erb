<div class="d-flex flex-column">

    <% @posts.each do |post| %>
        
        <div style=" margin-top: 1%;margin-bottom: 1%;margin-left: 1%;margin-right: 1%;" >
            <div class="card" >
                <h4> <%= link_to post.title, post_path(post) %> </h4>
                <h6><%= post.body %> </h6>
            </div>
            
        </div>

    <% end %>

</div>
